<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="false" />

        <service id="Loevgaard\SyliusFeedPlugin\Command\GenerateFeedsCommand">
            <argument type="service" id="loevgaard_sylius_feed.repository.feed" />
            <argument type="service" id="sylius.repository.channel" />
            <argument type="service" id="sylius.repository.product" />
            <argument type="service" id="sylius.manager.product" />
            <argument type="service" id="filesystem" />
            <argument type="service" id="router" />
            <argument type="service" id="liip_imagine.cache.manager" />
            <argument type="service" id="translator" />
            <tag name="console.command" />
        </service>

        <service id="Loevgaard\SyliusFeedPlugin\Menu\AdminMenuListener">
            <tag name="kernel.event_listener" event="sylius.menu.admin.main" method="addAdminMenuItems" />
        </service>
    </services>
</container>
