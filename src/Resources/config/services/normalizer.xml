<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="setono_sylius_feed.normalizer.google.shopping.product" class="Setono\SyliusFeedPlugin\Normalizer\Google\Shopping\ProductNormalizer">
            <argument type="service" id="router"/>
            <argument type="service" id="liip_imagine.cache.manager"/>
            <argument type="service" id="sylius.product_variant_resolver.default"/>
            <argument type="service" id="sylius.calculator.product_variant_price"/>
            <argument type="service" id="setono_sylius_feed.normalizer.google.shopping.product_variant"/>
        </service>

        <service id="setono_sylius_feed.normalizer.google.shopping.product_variant" class="Setono\SyliusFeedPlugin\Normalizer\Google\Shopping\ProductVariantNormalizer">
            <argument type="service" id="sylius.availability_checker"/>
            <argument type="service" id="liip_imagine.cache.manager"/>
            <argument type="service" id="router"/>
            <argument type="service" id="sylius.calculator.product_variant_price"/>
        </service>
    </services>
</container>
